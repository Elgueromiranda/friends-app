<div id="<%= dom_id @friend %>">
  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">    <%= @friend.first_name %>
          <%= @friend.last_name %>

</h5>
    <p class="card-text">    <strong>Email:</strong>
<%= @friend.phone %></p>
    <p class="card-text">    <strong>Phone:</strong>
<%= @friend.email %></p>
    <p class="card-text">     <strong>Twitter:</strong>
<%= @friend.twitter %></p>
     <%= link_to "Edit", edit_friend_path(@friend), class:'btn btn-primary' %>

  </div>
</div>
 
<br/>

<p>
  <%= link_to "Back to friends", friends_path, class:'btn btn-primary' %>
</p>

<p>

  <%= button_to "Delete friend", @friend, method: :delete, class:'btn btn-danger' %>
</p>
